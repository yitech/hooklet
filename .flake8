[flake8]
max-line-length = 100
exclude = .git,__pycache__,build,dist,venv
ignore = E203,W503
# E203: whitespace before ':' (for black compatibility)
# W503: line break before binary operator (for black compatibility)
per-file-ignores =
    __init__.py:F401
    # F401: imported but unused (allowed in __init__.py)
